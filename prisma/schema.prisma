generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Clinic {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique // Public identifier for QR codes
  email     String   @unique
  password  String   // Hashed
  logo      String?  // Optional Clinic Logo URL
  avgTime   Int      @default(10) // Average time per patient in minutes
  dailyTicketCount Int @default(0) // Atomic counter for tickets
  lastTicketDate   DateTime @default(now()) // To handle daily resets
  createdAt DateTime @default(now())
  turns     Turn[]
  questions Question[]
}

model Turn {
  id        String     @id @default(cuid())
  clinicId  String
  clinic    Clinic     @relation(fields: [clinicId], references: [id])
  
  ticketCode String    // e.g. "A01", "B12"
  position   Int       // 1, 2, 3... (Order of arrival/priority)
  status     TurnStatus @default(WAITING)
  
  // Specific details
  patientName String?
  answers     Json?      // Stores patient answers to intake questions
  
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt // Tracks when status changed (e.g. became ACTIVE)
  
  @@index([clinicId, status])
}

model Question {
  id        String   @id @default(cuid())
  clinicId  String
  clinic    Clinic   @relation(fields: [clinicId], references: [id])
  
  text      String
  type      String   @default("TEXT") // TEXT, CHOICE
  options   Json?    // Array of strings if type is CHOICE
  required  Boolean  @default(false)
  placeholder String? // Optional placeholder text
  order     Int      @default(0)
  
  createdAt DateTime @default(now())
}

enum TurnStatus {
  WAITING
  ACTIVE
  DELAYED
  DONE
  CANCELLED
  URGENT
}
