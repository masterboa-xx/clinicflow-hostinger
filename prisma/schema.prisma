generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Clinic {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique // Public identifier for QR codes
  email     String   @unique
  password  String   // Hashed
  logo      String?  // Optional Clinic Logo URL
  avgTime   Int      @default(10) // Average time per patient in minutes
  dailyTicketCount Int @default(0) // Atomic counter for tickets
  lastTicketDate   DateTime @default(now()) // To handle daily resets
  createdAt DateTime @default(now())
  turns     Turn[]
  questions Question[]
  subscription Subscription?
  supportTickets SupportTicket[]
}

model Turn {
  id        String     @id @default(cuid())
  clinicId  String
  clinic    Clinic     @relation(fields: [clinicId], references: [id])
  
  ticketCode String    // e.g. "A01", "B12"
  position   Int       // 1, 2, 3... (Order of arrival/priority)
  status     TurnStatus @default(WAITING)
  
  // Specific details
  patientName String?
  answers     Json?      // Stores patient answers to intake questions
  
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt // Tracks when status changed (e.g. became ACTIVE)
  
  @@index([clinicId, status])
}

model Question {
  id        String   @id @default(cuid())
  clinicId  String
  clinic    Clinic   @relation(fields: [clinicId], references: [id])
  
  text      String
  type      String   @default("TEXT") // TEXT, CHOICE
  options   Json?    // Array of strings if type is CHOICE
  required  Boolean  @default(false)
  placeholder String? // Optional placeholder text
  order     Int      @default(0)
  
  createdAt DateTime @default(now())
}

enum TurnStatus {
  WAITING
  ACTIVE
  DELAYED
  DONE
  CANCELLED
  URGENT
}

model SuperAdmin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  auditLogs AuditLog[]
}

model Subscription {
  id           String             @id @default(cuid())
  clinicId     String             @unique // One active sub per clinic
  clinic       Clinic             @relation(fields: [clinicId], references: [id])
  plan         SubscriptionPlan   @default(STARTER)
  cycle        BillingCycle       @default(MONTHLY)
  status       SubscriptionStatus @default(TRIAL)
  startDate    DateTime           @default(now())
  endDate      DateTime?
  trialEndsAt  DateTime?
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
}

model SupportTicket {
  id          String        @id @default(cuid())
  clinicId    String
  clinic      Clinic        @relation(fields: [clinicId], references: [id])
  title       String
  description String        @db.Text
  status      TicketStatus  @default(OPEN)
  priority    TicketPriority @default(MEDIUM)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  messages    TicketMessage[]
}

model TicketMessage {
  id        String   @id @default(cuid())
  ticketId  String
  ticket    SupportTicket @relation(fields: [ticketId], references: [id])
  sender    String   // "ADMIN" or "CLINIC"
  content   String   @db.Text
  createdAt DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  adminId   String
  admin     SuperAdmin @relation(fields: [adminId], references: [id])
  action    String
  targetId  String?  // ID of the clinic or entity affected
  details   Json?
  createdAt DateTime @default(now())
}

enum SubscriptionPlan {
  STARTER
  PRO
  CLINIC_PLUS
}

enum BillingCycle {
  MONTHLY
  YEARLY
}

enum SubscriptionStatus {
  ACTIVE
  TRIAL
  SUSPENDED
  CANCELLED
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
}
